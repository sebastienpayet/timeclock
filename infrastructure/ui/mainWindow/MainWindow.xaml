<Window x:Class="TimeClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeClock"
        mc:Ignorable="d"
        Title="TimeClock" Height="391.208" Width="289.56" DataContext="{Binding MainViewModel, Source={StaticResource Locator}}" VerticalAlignment="Center" HorizontalAlignment="Center" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="Manual" ShowInTaskbar="False" WindowStyle="ThreeDBorderWindow">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <Grid VerticalAlignment="Top" Height="350" Margin="0,0,-2,0">

        <Button Content="Exporter les données" Command="{Binding LoadEmployeesCommand}" Margin="43,315,43,10" HorizontalContentAlignment="Center" />
        <Label x:Name="label_time_total_day" Content="Durée du jour" Margin="10,10,10,294" FontSize="20" Background="#FF4EBDA4" FontFamily="Noto Mono" Grid.ColumnSpan="2"/>
        <Label x:Name="time_total_day" Content="{Binding TimeCounter}" Height="31" Margin="10,61,10,0" VerticalAlignment="Top" FontSize="20" FontFamily="Noto Mono" Foreground="#FF068339" FontWeight="Bold"/>
        <Label x:Name="label_time_total_session" Content="Durée de la session" Height="46" Margin="10,97,10,0" VerticalAlignment="Top" FontSize="20" Background="#FF4E7BBD" FontFamily="Noto Mono" Grid.ColumnSpan="2"/>
        <Label x:Name="time_total_session" Content="{Binding DateTime}" ContentStringFormat="dd/MM/yy HH:mm:ss" Height="35" Margin="10,143,10,0" VerticalAlignment="Top" FontSize="20" FontFamily="Noto Mono" Foreground="#FF4E7BBD" FontWeight="Bold"/>
        <Image Margin="88,183,87,56" Source="play-button.png" Cursor="Hand"/>
    </Grid>
</Window>
